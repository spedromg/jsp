<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>java_jsp_web02</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- configurando as servlets do projeto -->
  <servlet>
  	<servlet-name>Cadastrar</servlet-name>
  	<servlet-class>servlets.ServletCadastrar</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Cadastrar</servlet-name>
  	<url-pattern>/cadastrar</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Listar</servlet-name>
  	<servlet-class>servlets.ServletListar</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Listar</servlet-name>
  	<url-pattern>/listar</url-pattern>
  </servlet-mapping>
</web-app>